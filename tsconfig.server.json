{
  "compilerOptions": {
    /* Basic Options */
    "composite": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsxdev",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "outDir": "dist/server",
    "sourceMap": false,

    /* Node */
    "moduleResolution": "Node",
    "esModuleInterop": true,

    /* Linting */
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Imports, Module Aliases, Paths, Types */
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@api/*": ["./server/api/*"],
      "@client/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@public/*": ["./public"],
      "@server/*": ["./server/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src", "server.ts", "server", "types", "vite.config.ts"],
  "exclude": ["build", "dist", "node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
